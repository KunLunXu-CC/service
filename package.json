{
  "name": "blog-server",
  "version": "2.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "logs": "pm2 logs",
    "start": "pm2 start ecosystem.config.js --env development",
    "commit": "git-cz",
    "add": "git add --all && git reset -- */development.js",
    "release": "standard-version --release-as",
    "release:100": "npm run release -- major",
    "release:010": "npm run release -- minor",
    "release:001": "npm run release -- patch",
    "start:pro": "pm2 start ecosystem.config.js && npm run logs",
    "restart:pro": "pm2 restart ecosystem.config.js",
    "script": "cross-env NODE_ENV=production node ./scripts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-koa": "^2.9.4",
    "cron": "^1.7.2",
    "echarts": "^4.8.0",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.8.2",
    "koa-body": "^4.1.1",
    "koa-router": "^9.0.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.15",
    "log4js": "^6.3.0",
    "moment": "^2.24.0",
    "mongoose": "^5.7.1",
    "node-rsa": "^1.0.6",
    "nodemailer": "^6.3.0",
    "puppeteer": "^5.2.1",
    "qiniu": "^7.2.2",
    "sha1": "^1.1.1",
    "tinify": "^1.6.0-beta.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "boxen": "^4.2.0",
    "chalk": "^3.0.0",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.7",
    "inquirer": "^7.1.0",
    "ora": "^4.0.3",
    "pm2": "^3.5.1",
    "shelljs": "^0.8.3",
    "standard-version": "^7.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
